@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<FitnessGuru.Services.Models.Home.ArticleViewModel>

<div style="margin-top: 50px">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id">
            <img height="160" width="250" style="float:left" src="@Model[i].ImgUrl" />
        </a>
        <a asp-controller="Articles" asp-action="Details" class="col-md-4" asp-route-id="@Model[i].Id">
            <dt>
                @Model[i].Title
            </dt>
            <br />
            @Model[i].ArticleDescription
        </a>
        <div style="clear: both"></div>
        <br />
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("Details", "Categories", new { page }))