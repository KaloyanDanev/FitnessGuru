@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<FitnessGuru.Services.Models.Home.ProductViewModel>
@{
    ViewData["Title"] = "Store";
}

<div style="margin-top: 50px;background-color: white" class="container">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model[i].Id">
            <img height="150" width="100" style="float: left" src="@Model[i].ImgUrl" />
        </a>
        <a asp-controller="Products" asp-action="Details" class="col-md-4" asp-route-id="@Model[i].Id">
            <dt>
                <h4 style="color: black;font-style: italic"> @Model[i].Title</h4>
            </dt>
            <br />
            <b style="color: black">@Model[i].Content</b>
            <br />
            <b style="color: black;margin-top: 200px">$@Model[i].Price</b>
        </a>

        <div style="clear: both"></div>
        <hr />
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("Details", "ProductCategories", new { page }))