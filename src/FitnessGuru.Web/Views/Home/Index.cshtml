@model FitnessGuru.Web.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    @foreach (var article in Model.Articles)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">@article.CategoryName</div>
                <div class="panel-body">
                    @article.Content
                </div>
            </div>
        </div>
    }
</div>