@using FitnessGuru.Models.Articles
@model FitnessGuru.Services.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<div id="myCarousel" class="carousel" data-ride="carousel" style="margin-top: 5%">
    <ol class="carousel-indicators">
        <li class="item1 active"></li>
        <li class="item2"></li>
        <li class="item3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="/images/indexSlide1.jpg" style="height: 400px;width: 100%" />
            <div class="container">
                <div class="carousel-caption">
                    <h1 style="color: white; font-family: fantasy">Welcome to FintessGuru!</h1>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="/images/IndexSlide2.jpg" style="height: 400px;width: 100%" />
            <div class="container">
                <div class="carousel-caption">
                    <h1 style="color: white; font-family: fantasy">Explore our ideas</h1>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="/images/IndexSlide3.jpg" style="height: 400px;width: 100%" />
            <div class="container">
                <div class="carousel-caption">
                    <h1 style="color: white; font-family: fantasy">Get inspired</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control left" href="#myCarousel" data-slide="next"></a>
        <a class="carousel-control right" href="#myCarousel" data-slide="prev"></a>
    </div>
</div>

<div class="row " style="margin-top: 50px;background-color: #f5f2f2">
    <div class="text-center"><h2><b>Newest Articles</b></h2></div>
    @foreach (var article in Model.Articles)
    {
        <div class="col-md-4" style="margin-top: 30px">
            <div class="col-md-12">
                <a asp-controller="Articles" asp-action="Details" class="text-center" asp-route-id="@article.Id">
                    <img class="image" height="200" width="359" src="@article.ImgUrl" />
                </a>
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <h4>@article.Title</h4>
                </a>
                <div style="color: black;font-size: 15px">
                    @article.ArticleDescription
                </div>
                <h5>
                    @{
                        var routeId = 0;
                        if (article.CategoryName == "Training") { routeId = 1; }
                        else if (article.CategoryName == "Workouts") { routeId = 2; }
                        else if (article.CategoryName == "Nutrition") { routeId = 3; }
                        else if (article.CategoryName == "For Women") { routeId = 4; }
                        else if (article.CategoryName == "Other Topics") { routeId = 5; }
                        <a asp-controller="Categories" asp-action="ArticlesCategory" asp-route-id="@routeId">@article.CategoryName</a>
                    }
                </h5>
            </div>
        </div>
    }
</div>
<hr />
<div class="row" style="margin-top: 50px;background-color: #f5f2f2">
    <div class="text-center"><h2><b>Newest Products</b></h2></div>
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4" style="margin-top: 20px">
            <div class="col-md-12">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                    <div class="panel-heading"><h4 style="font-size: 20px">@product.Title</h4></div>
                    <img height="180" width="130" class="center-block col-md-5" src="@product.ImgUrl" />
                </a>
                <div class="row" style="color: black;font-size: 15px">
                    @Html.Raw(product.HtmlContent)
                    <br />
                    <div style="margin-top: 10px">$@product.Price</div>
                </div>
                <h5>
                    @{
                        var routeId = 0;
                        if (@product.ProductCategoryName == "Protein") { routeId = 1; }
                        else if (@product.ProductCategoryName == "Creatine") { routeId = 2; }
                        else if (@product.ProductCategoryName == "Pre-Workout") { routeId = 3; }
                        else if (@product.ProductCategoryName == "Bcaa") { routeId = 4; }
                        else if (@product.ProductCategoryName == "Fat Burner") { routeId = 5; }
                        else if (@product.ProductCategoryName == "Shaker Bottle") { routeId = 6; }
                        <a asp-controller="Categories" asp-action="ProductsCategory" asp-route-id="@routeId">@product.ProductCategoryName</a>
                    }
                </h5>
            </div>
        </div>
    }
</div>