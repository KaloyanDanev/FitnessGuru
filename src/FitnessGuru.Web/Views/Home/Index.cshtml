@using FitnessGuru.Models.Articles
@model FitnessGuru.Services.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <div id="carousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" >
            <div class="item active">
                <img src="/images/indexSlide1.jpg" style="height: 400px;width: 100%"  />
                <div class="container">
                    <div class="carousel-caption">
                        <h1 style="color: white">Welcome to FintessGuru!</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="/images/IndexSlide2.jpg" style="height: 400px;width: 100%" />
                <div class="container">
                    <div class="carousel-caption">
                        <h1 style="color: white">Explore our ideas</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="/images/IndexSlide3.jpg" style="height: 400px;width: 100%" />
                <div class="container">
                    <div class="carousel-caption">
                        <h1 style="color: white">Get inspired</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $("#carousel").carousel({
            interval: 1000
        });

    </script>
</div>


<div class="row " style="margin-top: 50px">
    <div class="text-center"><h2><b>Newest Articles</b></h2></div>
    @foreach (var article in Model.Articles)
    {
        <div class="col-md-4">
            <div class="col-md-12">
                <a asp-controller="Articles" asp-action="Details" class="text-center" asp-route-id="@article.Id">
                    <img height="200" width="359" class=" img-rounded " src="@article.ImgUrl" />
                </a>
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <h4 style="font-family: cursive">@article.Title</h4>
                </a>
                <div style="color: black;font-size: 15px">
                    @article.ArticleDescription
                </div>
                <div class="">
                    <h5>
                        <a asp-controller="Categories" asp-action="Details" asp-route-id="@article.Id">@article.CategoryName</a>
                    </h5>
                </div>
            </div>
        </div>
    }
</div>
<hr />

<div class="row" style="margin-top:40px">
    <div class="text-center"><h2><b>Newest Articles</b></h2></div>
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4">
            <div class="col-md-12">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                    <div class="panel-heading"><h4 style="font-family: cursive">@product.Title</h4></div>
                    <img height="180" width="130" class="center-block col-md-5" src="@product.ImgUrl" />
                </a>
                <div class="row ">
                    @Html.Raw(product.HtmlContent)
                    <br />
                    $@product.Price
                </div>
                <div class="">
                    <h5>
                        @product.ProductCategoryName
                    </h5>
                </div>
            </div>
        </div>
    }
</div>