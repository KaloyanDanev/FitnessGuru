<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - FitnessGuru</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-cerulean.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
   
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
      
    </environment>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="pull-left" href="/">
                    <img src="/images/FitnessGuruLogo.jpg" width="90" class="img-rounded" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a asp-controller="Articles" asp-action="Details" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Articles<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Categories" asp-action="Details" asp-route-id="1">Training</a></li>
                            <li><a asp-controller="Categories" asp-action="Details" asp-route-id="2">Workouts</a></li>
                            <li><a asp-controller="Categories" asp-action="Details" asp-route-id="3">Nutrition</a></li>
                            <li><a asp-controller="Categories" asp-action="Details" asp-route-id="4">For Women</a></li>
                            <li><a asp-controller="Categories" asp-action="Details" asp-route-id="5">Other Topics</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a asp-controller="Products" asp-action="Details" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Store <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="1">Protein</a></li>
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="2">Creatine</a></li>
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="3">Pre-Workout</a></li>
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="4">BCAAs</a></li>
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="5">Fat Burners</a></li>
                            <li><a asp-controller="Categories" asp-action="ProductDetails" asp-route-id="6">Shaker Bottles</a></li>
                        </ul>
                    </li>
                    <li class="disabled"><a asp-controller="Forum" asp-action="Forum">Forum</a></li>
                    @if (this.User.Identity.IsAuthenticated && User.Identity.Name == "admin@admin.com")
                    {
                        <li><a asp-controller="Articles" asp-action="Create">Create</a></li>
                        <li><a asp-controller="Categories" asp-action="Index" asp-area="Administration">Administration</a></li>
                    }
                </ul>
                                
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
    <partial name="_CookieConsentPartial" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - FitnessGuru</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"> 
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
