@model List<FitnessGuru.Services.Models.Categories.CategoryIdAndNameViewModel>
@{ ViewData["Title"] = "Administration"; }
<br/>
@if (this.User.Identity.IsAuthenticated && User.Identity.Name == "admin@admin.com")
{
    <div class="row">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Categories" asp-area="Administration">Create Category</a>
        <a class="btn btn-primary" asp-controller="Articles" asp-action="Create">Create Article</a>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Create Product</a>
    </div>
    <br/>
    <div class="row">
        <div class="container">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <a asp-controller="Categories"
                   asp-action="Details"
                   asp-route-id="@Model[i].Id">
                    @Model[i].Name
                </a>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Categories" asp-area="Administration" asp-route-id="@Model[i].Id">Edit</a>
                <a class="btn btn-primary" asp-action="Index" asp-controller="Home" asp-route-id="@Model[i].Id">Delete</a>
                if (i != @Model.Count() - 1)
                {
                    <hr/>
                }
            }
        </div>
    </div>
}